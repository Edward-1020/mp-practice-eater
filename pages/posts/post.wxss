swiper {
  width: 100%;
  height: 600rpx;
}

swiper image {
  width: 100%;
  height: 600rpx;
}

.post-container {
  display: flex;
  flex-direction: column;
  margin: 20rpx 0 40rpx 0;
  background: #fff;
  border: 1rpx solid #ededed;
  padding-bottom: 5rpx;
}

.post-author-date {
  margin: 10rpx 0 20rpx 20rpx;
}

.post-author {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.post-date {
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 5rpx;
  font-size: 26rpx;
}

.post-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin: 0 0 10rpx 20rpx;
}

.post-image {
  margin: auto 20rpx;
  width: 100%;
}

.post-content {
  color: #666;
  font-size: 28rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.post-like {
  font-size: 26rpx;
  flex-direction: row;
  line-height: 16rpx;
  margin-left: 10rpx
}

.post-like-image {
  height: 32rpx;
  width: 32rpx;
  margin-right: 8rpx;
  vertical-align: middle;
}

.post-like-font {
  vertical-align: middle;
  margin-right: 20rpx;
}